<div class="row">
    <div id="log" class="col s12">
        {{#if loginError}}
            <p class="alert">{{loginError}}</p>
        {{/if}}
        <h4>Задать новый пароль</h4>
        <form action="/auth/password" method="post">
            <div class="input-field">
                <input id="password" type="passwordl" class="validate" name="password" required minlength="3">
                <label for="password">password</label>
                <span class="helper-text" data-error="Введите password"
                      data-success="right">Введите new password</span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="token" value="{{token}}">
            <button class="btn waves-effect waves-light" type="submit" name="action">Обновить
                <i class="material-icons right"></i>
            </button>
        </form>
    </div>
</div>